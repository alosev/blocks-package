extend /src/jade/templates/layout

block title
	title Selectbox example

block append style
	link(rel='stylesheet', href='selectbox.css')

block content
	p: a.g-link.g-link_home(href='/') Home
	.g-select-list-item
		include selectbox

	.g-select-list-item
		select(name='main-select-2')
			option(value='1') Item Item 1
			option(value='2') Item Item 2
			option(value='3', selected='selected') Item Item 3
			option(value='4') Item Item 4
			option(value='5') Item Item 5
	.g-select-list-item.g-select-list-item_mini
		select(name='main-select-3')
			option(value='1') Item Item 1
			option(value='2', selected='selected') Item Item 2
			option(value='3') Item Item 3
			option(value='4') Item Item 4
			option(value='5') Item Item 5

block prepend script
	script(src='selectbox.jquery.js')
	script(src='selectbox.js')